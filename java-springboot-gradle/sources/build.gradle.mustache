group '{{user.gradleGroup}}'

buildscript {
	ext {
		springBootVersion = '{{forme.variables.springBootVersion}}'
	}
	repositories {
		mavenCentral()
	}
	dependencies {
		classpath("org.springframework.boot:spring-boot-gradle-plugin:${springBootVersion}")
	}
}

apply plugin: "java"
apply plugin: "spring-boot"

sourceCompatibility = {{forme.variables.sourceCompatibility}}
targetCompatibility = {{forme.variables.targetCompatibility}}

jar {
	baseName = '{{user.jarBaseName}}'
	version = '{{user.jarVersion}}'
}

repositories {
	mavenCentral()
}

dependencies {
	compile('org.springframework.boot:spring-boot-starter-web:${springBootVersion}')
	testCompile('org.springframework.boot:spring-boot-starter-test:${springBootVersion}')
}
